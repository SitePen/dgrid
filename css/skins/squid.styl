/*$row-odd-text-shadow ?= 0 -1px 0 rgba(0,0,0,.3)*/

/* ui-state rules */
$active-background-color ?= #64390d
$active-hover-background-color ?= #8b6b4a
$active-text-shadow ?= 0 -1px 0 rgba(0,0,0,.3)
/*$default-active-background-color ?= */
/*$default-active-hover-background-color ?= */
$default-background ?= url("images/row_back.png") #000 repeat-x
$default-hover-background-color ?= #444

/* ColumnReorder rules */
$reorder-dnd-border = 2px dotted $primary-color !important

.squid {
	.ui-widget-content {
		border: $content-border;
		background: $content-background-color;
		color: $content-color;
		text-shadow: $content-text-shadow;
	}

	.ui-icon {
		background-image: $sort-image;
	}

	.dgrid-header {
		padding: 0 1px; /* add side padding to align with borders on content area */
	}

	.ui-widget-header,
	.dgrid-footer {
		color: $primary-color;
		 /* Old browsers */
		background: $footer-background-color;
		/* W3C */
		background: $footer-gradient;
		/* IE6-8 */
		filter: $ms-footer;
		font-weight: bold;
	}

	.ui-widget-header:hover {
		/* Old browsers */
		background: $header-cell-hover-background-color;
		/* W3C */
		background: $header-cell-hover-gradient;
		/* TODO: Add IE 6-8 filter? */
	}

	.ui-state-default {
		transition-duration: 0.2s;
		transition-property: background-color, border-color;
		background: $default-background;
	}

	.ui-state-default:hover {
		background-color: $default-hover-background-color;
	}

	.ui-state-active {
		background-color: $active-background-color;
		text-shadow: $active-text-shadow;
	}

	.ui-state-active:hover {
		background-color: $active-hover-background-color;
	}

	.ui-state-highlight {
		background-color: $highlight-background-color;
	}

	.dgrid-cell {
		border-color: $cell-border-color;
	}

	/* for ColumnReorder */
	.dgrid-header .dojoDndItemBefore {
		border-left: $reorder-dnd-border;
	}

	.dgrid-header .dojoDndItemAfter {
		border-right: $reorder-dnd-border;
	}

}

.has-ie-6 .squid .ui-state-default {
	background-image: none;
}

/* for pagination in IE < 8 + quirks, need additional rule to override link color */
.has-ie-6-7 .squid .dgrid-navigation a,
.has-ie.has-quirks .squid .dgrid-navigation a {
	color: $primary-color;
}
