@import "nib/vendor";
@import "../variables";

/* Theme specific variables */

/* General rules */
/*$border-color = #fff*/
$cell-border-color ?= #ccc
/*$legacy-highlight-background-color ?= #d6e5a5*/
/*$primary-background-color ?= #000*/
$primary-color ?= #fff
/*$row-color ?= #333*/
/*$row-hover-background-color ?= #c5dca6*/
/*$row-text-shadow ?= 0 1px 0 rgba(255,255,255,.5)*/

/* ui-widget-content rules */
$content-background-color ?= #000
$content-border ?= 1px solid #555
$content-color ?= $primary-color
$content-text-shadow ?= 0 1px 0 rgba(0,0,0,.7)

/* Highlighting rules */
$highlight-background-color ?= #666
/*$highlight-color ?= #000*/

/* Header/Footer rules */
$footer-background-color = #2d1f14
$footer-gradient ?= linear-gradient(top, #140e09 0%,$footer-background-color 100%)
/*$header-border-color ?= #111*/
/*$header-cell-border-color ?= #bbb*/
$header-cell-hover-background-color ?= #000
$header-cell-hover-gradient ?= linear-gradient(top, $header-cell-hover-background-color 0%,$footer-background-color 100%)
/*$header-text-shadow ?= 0 -1px 0 rgba(0,0,0,.9)*/
$ms-footer ?= unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#140e09', endColorstr='#2d1f14',GradientType=0 )")

/* Sorting rules */
$sort-image = url('../images/ui-icons_222222_256x240_white.png')

/* Selection rules */
