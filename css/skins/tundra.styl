/* Theme specific variables */

/* General rules */
$border-color = #bba
$cell-border-color ?= #ddc
/*$legacy-highlight-background-color ?= #d6e5a5*/
/*$primary-background-color ?= #000*/
$primary-color ?= #fff
/*$row-color ?= #333*/
/*$row-hover-background-color ?= #c5dca6*/
/*$row-text-shadow ?= 0 1px 0 rgba(255,255,255,.5)*/

/* ui-widget-content rules */
$content-background-color ?= $primary-color
/*$content-border ?= 1px solid #555*/
$content-color ?= #000
/*$content-text-shadow ?= 0 1px 0 rgba(255,255,255,.9)*/

/* Highlighting rules */
$highlight-background-color ?= #ff6
/*$highlight-color ?= #000*/

/* Header/Footer rules */
$footer-background-color = #e8e8e8
$footer-gradient ?= linear-gradient(top, $primary-color 0%,$footer-background-color 100%)
/*$header-border-color ?= #bba*/
$header-cell-hover-background-color ?= #f6f6f6
$header-cell-border-color ?= #bba
$header-cell-hover-gradient ?= $footer-gradient
/*$header-text-shadow ?= 0 -1px 0 rgba(0,0,0,.9)*/
$ms-footer ?= unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#e8e8e8',GradientType=0 )")

