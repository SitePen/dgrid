/* ui-state rules */
$active-background-color ?= #aec7e3
/*$active-hover-background-color ?= #8b6b4a*/
/*$active-text-shadow ?= 0 -1px 0 rgba(0,0,0,.5)*/
/*$default-active-background-color ?= */
/*$default-active-hover-background-color ?= */
/*$default-background ?= */
$default-hover-background-color ?= #60a1ea

/* ColumnReorder rules */
/*$reorder-dnd-border = 2px dotted $primary-color !important*/

.tundra {
	.dgrid {
		border-color: $border-color;
	}

	.ui-widget-content {
		background: $content-background-color;
		color: $content-color;
	}

	.ui-widget-header,
	.dgrid-footer {
		/* Old browsers */
		background: $footer-background-color;
		/* W3C */
		background: $footer-gradient;
		/* IE6-8 */
		filter: $ms-footer;
		font-weight: bold;
	}

	.ui-widget-header th:hover {
		/* Old browsers */
		background: $header-cell-hover-background-color;
		/* W3C */
		background: $header-cell-hover-gradient;
		/* TODO: Add IE 6-8 filter? */
	}

	.ui-state-active {
		background-color: $active-background-color;
	}

	.ui-state-default:hover {
		background-color: $default-hover-background-color;
	}

	.ui-state-highlight {
		background-color: $highlight-background-color;
	}

	.dgrid-cell {
		border-color: $cell-border-color;
	}

	.ui-widget-header .dgrid-cell {
		border-color: $header-cell-border-color;
	}
}
